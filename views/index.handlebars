
<h1>Eat-Da-Burger!</h1>
<div class="row">
    <div class="block-left">
<h2>Be devoured!</h2>
<ul>
    {{#each burgers }}
        {{#unless isDevoured }}
            <li>
                {{ name }}
                <button class="change-devoured" data-id="{{ id }}">GET IN MY BELLY</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>
</div>
<div class="block-right">
<h2>Devoured Burgers!</h2>
<ul>
    {{#each burgers }}
        {{#if isDevoured }}  
            <li>{{ name }}</li>
        {{/if}}
    {{/each}}  
</ul>
</div>
</div>
<form class="create-form">
    <div class="form-group">
        <textarea name="name" id="burgerarea" maxlength="30" placeholder="Enter a burger you want to eat!"></textarea>
    </div>
    <button type="submit">Submit</button>
</form>
