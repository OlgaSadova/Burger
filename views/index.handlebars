

<div class="jumbotron p-3 text-center">

  <h1 class="display-2">The Best Burgers!</h1>
</div>
<div class="container">


  <div class="row">
    <div class="col-5 mb-2 p-0">
      <ul class="list-group">
        <h2 class="text-center"><i class="fas fa-hamburger mr-4"></i>Burgers Not Eaten<i
            class="fas fa-hamburger ml-4"></i></h2>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-2"></div>
    <div class="col-5 mb-2 p-0">
      <ul class="list-group">
        <h2 class="text-center"><i class="fas fa-hamburger mr-4"></i>Devoured Burgers<i
            class="fas fa-hamburger ml-4"></i></h2>
             {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
      </ul>
    </div>

  </div>
  <div class="row justify-content-center mt-5 mb-5">

    <form class="create-form col-6">
      <legend class="display-4">Add a burger</legend>
      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" class="form-control" id="burg" name="name">
        <button id="addaburger" class="btn btn-lg text-dark mt-1" type="submit">Add Burger</button>

      </div>
      
    </form>
  </div>
</div>